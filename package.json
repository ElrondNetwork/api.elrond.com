{
  "name": "elrond-nestjs-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "npm run copy-devnet-config & nest start",
    "start:watch": "npm run copy-devnet-config & nest start --watch",
    "start:debug": "npm run copy-devnet-config & nest start --debug --watch",
    "start:test": "npm run copy-testnet-config & nest start",
    "start:prod": "npm run copy-mainnet-config & nest start",
    "start:custom": "npm run copy-custom-config & nest start",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run copy-devnet-config & nest build & jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./src/test/jest-e2e.json --detectOpenHandles",
    "copy-devnet-config": "cp ./config/config.devnet.yaml ./config/config.yaml",
    "copy-testnet-config": "cp ./config/config.testnet.yaml ./config/config.yaml",
    "copy-mainnet-config": "cp ./config/config.mainnet.yaml ./config/config.yaml",
    "copy-custom-config": "cp ./config/config.custom.yaml ./config/config.yaml"
  },
  "dependencies": {
    "@elrondnetwork/erdjs": "^4.0.3",
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/microservices": "^7.6.17",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/platform-socket.io": "^7.6.15",
    "@nestjs/schedule": "^0.4.3",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/websockets": "^7.6.15",
    "@types/cache-manager": "^3.4.0",
    "@types/request-ip": "0.0.35",
    "agentkeepalive": "^4.1.4",
    "axios": "^0.21.1",
    "cache-manager": "^3.4.3",
    "csrf": "^3.1.0",
    "js-yaml": "^4.0.0",
    "nest-winston": "^1.5.0",
    "node-object-hash": "^2.3.1",
    "prom-client": "^13.1.0",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "simple-git": "^2.40.0",
    "swagger-ui-express": "^4.1.6",
    "tiny-async-pool": "^1.2.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@testing-library/jest-dom": "^4.2.4",
    "@types/axios": "^0.14.0",
    "@types/cron": "^1.7.2",
    "@types/csrf": "^3.1.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^14.14.36",
    "@types/redis": "^2.8.28",
    "@types/socket.io": "^2.1.13",
    "@types/supertest": "^2.0.10",
    "@types/tiny-async-pool": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "typeRoots": ["../node_modules/@types", "./test/typings"]
  }
}
